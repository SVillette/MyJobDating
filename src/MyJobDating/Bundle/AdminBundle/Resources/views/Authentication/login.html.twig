{% extends 'base.html.twig' %}

{% block title %}
    {{ 'myjobdating.ui.connect_as_admin'|trans }}
{% endblock %}

{% block body %}
    <div class="row justify-content-md-center">
        <div class="col-lg-8">
            <div class="card">
                <form action="{{ path('myjobdating_admin_authentication_login') }}" method="post">
                    <div class="card-header">
                        <h1>{{ 'myjobdating.ui.connect_as_admin'|trans }}</h1>
                    </div>
                    <div class="card-body">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        {% if error %}
                            <div class="alert alert-danger" role="alert">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                        <div class="form-group row">
                            <label class="col-lg-3" for="username">{{ 'myjobdating.form.account.email'|trans }}</label>
                            <div class="col-lg-9">
                                <input class="form-control" type="text" name="_username" id="username" placeholder="{{ 'myjobdating.form.account.email'|trans }}"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3" for="password">{{ 'myjobdating.form.account.password'|trans }}</label>
                            <div class="col-lg-9">
                                <input class="form-control" type="password" name="_password" id="password" placeholder="{{ 'myjobdating.form.account.password'|trans }}"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3"></div>
                            <div class="col-lg-9">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" name="_remember_me" id="remember-me">
                                    <label class="custom-control-label" for="remember-me">{{ 'myjobdating.form.account.remember_me'|trans }}</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-lg-6">
                                <span>{{ 'myjobdating.ui.not_register_yet'|trans }}</span> <a href="{{ path('myjobdating_user_authentication_register') }}">{{ 'myjobdating.ui.sign_up'|trans }}</a>
                            </div>
                            <div class="col-lg-6 text-right">
                                <button type="submit" class="btn btn-sm btn-primary">{{ 'myjobdating.ui.connect'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
