{% extends 'layouts/admin/base.html.twig' %}

{% block title %}
    {{ 'myjobdating.ui.offer_add'|trans }}
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body text-center">
            <h1>{{ 'myjobdating.ui.offer_create'|trans }}</h1>
        </div>
    </div>

    <form class="mt-5">
        <div class="card">
            <input type="hidden" name="recruiter_id" value="{{ recruiter.getId() }}"/>

            <div class="card-header">
                <input type="text" class="w-100 form-control" placeholder="{{ 'myjobdating.ui.offer_name'|trans }}"/>
            </div>

            <div class="card-body">
                <textarea class="w-100 form-control" placeholder="{{ 'myjobdating.ui.offer_description'|trans }}"></textarea>

                <div class="skills">
                    <div class="row mt-3 skill-row align-items-center">
                        <div class="col-sm">
                            <select class="w-100"></select>
                        </div>

                        <div class="col-sm">
                            <select class="w-100"></select>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <span class="btn btn-primary add-skill-btn">{{ 'myjobdating.ui.skill_add'|trans }}</span>
                    <span class="btn btn-danger remove-skill-btn">{{ 'myjobdating.ui.skill_remove'|trans }}</span>
                </div>

                <div class="mt-3">
                    <label><input type="checkbox"/>{{ 'myjobdating.ui.offline'|trans }}</label>
                </div>

                <div class="mt-3 text-right">
                    <span class="btn btn-primary">{{ 'myjobdating.ui.create'|trans }}</span>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
