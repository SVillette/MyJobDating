<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ path('myjobdating_core_homepage') }}">{{ 'myjobdating.app_name'|trans }}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {% if app.user %}
                    <li class="nav-item {{ app.request.attributes.get('_route') == 'myjobdating_core_homepage' ? 'active' : '' }}">
                        <a class="nav-link" href="{{ path('myjobdating_core_homepage') }}">{{ 'myjobdating.ui.home'|trans }}<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{ 'myjobdating.ui.skill'|trans }}
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="nav-link dropdown-item text-primary" href="myjobdating_skill_add">{{ 'myjobdating.tab.add'|trans }}<span class="sr-only">(current)</span></a>
                            <a class="nav-link dropdown-item text-primary" href="#">{{ 'myjobdating.tab.edit'|trans }}<span class="sr-only">(current)</span></a>
                        </div>
                    </li>
                {% endif %}
            </ul>
            <ul class="navbar-nav">
                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{ 'myjobdating.ui.my_account'|trans }}
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <h6 class="dropdown-header">{{ 'myjobdating.ui.my_account'|trans }}</h6>
                            <span class="dropdown-item">{{ app.user.email }}</span>
                            <div class="dropdown-divider"></div>
                            <h6 class="dropdown-header">{{ 'myjobdating.ui.actions'|trans }}</h6>
                            <a class="dropdown-item text-danger" href="{{ path('myjobdating_user_authentication_logout') }}">{{ 'myjobdating.ui.logout'|trans }}</a>
                        </div>
                    </li>
                {% else %}
                    <a class="nav-item nav-link" href="{{ path('myjobdating_user_authentication_login') }}">{{ 'myjobdating.ui.connect'|trans }}</a>
                    <a class="nav-item nav-link" href="{{ path('myjobdating_user_authentication_register') }}">{{ 'myjobdating.ui.register'|trans }}</a>
                {% endif %}
            </ul>
        </div>
    </nav>
</header>
